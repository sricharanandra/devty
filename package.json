{
  "name": "devty",
  "description": "Developer tools and utilities",
  "version": "0.0.5",
  "private": true,
  "author": {
    "name": "Pratyush Tiwary",
    "email": "pratyushtiwary33@gmail.com",
    "url": "http://github.com/pratyushtiwary/"
  },
  "main": "main.js",
  "build": {
    "appId": "app.vercel.devty",
    "productName": "Devty",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "./dist/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "./logo_256x256.icns",
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "publish": {
      "provider": "github",
      "repo": "devty",
      "owner": "pratyushtiwary",
      "releaseType": "draft"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "electron:dev": "electron .",
    "electron:build-linux": "electron-builder  --linux --publish always",
    "electron:build-windows": "electron-builder  --windows --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@highlightjs/vue-plugin": "^2.1.0",
    "@types/dompurify": "^3.0.2",
    "@types/marked": "^5.0.1",
    "axios": "^1.5.1",
    "balm-ui": "^10.22.3",
    "crypto-js": "^4.1.1",
    "curlconverter": "^4.8.0",
    "diff": "^5.1.0",
    "dns": "^0.2.2",
    "dompurify": "^3.0.5",
    "electron-is-dev": "^2.0.0",
    "highlight.js": "^11.8.0",
    "jose": "^4.14.4",
    "marked": "^7.0.2",
    "marked-highlight": "^2.0.4",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.1.4",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.3",
    "vue": "^3.3.4",
    "vue-accessible-color-picker": "^4.1.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/crypto-js": "^4.1.1",
    "@types/diff": "^5.0.3",
    "@types/node": "^18.17.19",
    "@types/qrcode": "^1.5.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.1",
    "prettier": "^3.0.0",
    "typescript": "~5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-node-polyfills": "^0.14.0",
    "vite-plugin-pwa": "^0.16.5",
    "vite-plugin-static-copy": "^0.17.0",
    "vite-plugin-top-level-await": "^1.3.1",
    "vue-tsc": "^1.8.6"
  }
}
